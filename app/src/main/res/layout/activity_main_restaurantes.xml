<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011127"
    tools:context=".MainRestaurantes">

    <ImageButton
        android:id="@+id/button"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/curve_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Ant8"
        android:layout_width="130dp"
        android:layout_height="33dp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:srcCompat="@drawable/flecha" />

    <ImageView
        android:id="@+id/imgRestaurantes"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comidas"
        tools:layout_editor_absoluteY="214dp" />

    <TextView
        android:id="@+id/textRestaurantes"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Restaurantes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgRestaurantes" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosinnombre" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:background="00FF00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/textViewRestaurante"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/polygon1" />


    <ImageButton
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:background="00FF00"
        app:layout_constraintEnd_toStartOf="@+id/textRestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/polygon2" />

    <ImageButton
        android:id="@+id/eventoR1"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="logo"
        app:layout_constraintStart_toStartOf="@id/button"
        app:layout_constraintTop_toBottomOf="@+id/textRestaurantes" />

    <ImageButton
        android:id="@+id/eventoR2"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="logo"
        app:layout_constraintTop_toBottomOf="@+id/eventoR1"
        app:layout_constraintStart_toStartOf="@id/eventoR1"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:id="@+id/eventoR3"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="@id/eventoR1"
        app:layout_constraintTop_toBottomOf="@+id/eventoR2"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:id="@+id/eventoR4"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="@id/eventoR1"
        app:layout_constraintTop_toBottomOf="@+id/eventoR3"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:id="@+id/eventoR5"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="@id/eventoR1"
        app:layout_constraintTop_toBottomOf="@+id/eventoR4"
        android:layout_marginTop="25dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>