<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011127"
    tools:context=".MainMicrito">

    <ImageButton
        android:id="@+id/btnD1"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/curve_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back8"
        android:layout_width="63dp"
        android:layout_height="33dp"
        app:layout_constraintEnd_toEndOf="@+id/btnD1"
        app:layout_constraintStart_toStartOf="@+id/btnD1"
        app:layout_constraintTop_toTopOf="@+id/btnD1"
        app:srcCompat="@drawable/flecha" />

    <TextView
        android:id="@+id/textMicro"
        android:layout_width="299dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jersey_regular"
        android:text="Noche de micro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/micro"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/lugarMicro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/location"
        android:text="Estadio Parque Olaya"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/textMicro"
        tools:layout_editor_absoluteX="70dp" />

    <TextView
        android:id="@+id/horaMicro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/clock"
        android:text="Jueves 7:00 pm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/lugarMicro"
        tools:layout_editor_absoluteX="101dp" />

    <TextView
        android:id="@+id/descript2"
        android:layout_width="418dp"
        android:layout_height="127dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:padding="15dp"
        android:text="Unete a nosotros para disfrutar de partidos emocionantes y momentos inolvidables en la cancha."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/horaMicro"
        tools:layout_editor_absoluteX="-3dp" />

    <ImageView
        android:id="@+id/logo8"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosinnombre" />

    <ImageView
        android:id="@+id/micro"
        android:layout_width="405dp"
        android:layout_height="202dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/micro"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/btn_Parchar"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#28D82F"
        android:text="!Parchemos!"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descript2" />

</androidx.constraintlayout.widget.ConstraintLayout>